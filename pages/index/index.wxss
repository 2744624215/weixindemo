/**index.wxss**/

page, .container {
  width: 100%;
  height: 100%;
  background-color: #ccc;
}

scroll-view {
  position: absolute;
  top: 0;
  left: 0;
}
.scroll-view-item{
  border: 2rpx solid green;
  margin: 20rpx;
  background-color: white;
}
.header{
  height: 170rpx;
  display: flex;
  justify-content: flex-start;
  border-bottom: 1px dashed green;
}
.header-img{
  flex: 1.5;
  padding: 10rpx;
}
.header-img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 1px solid green;
}
.header-Info{
  flex: 5;
  display: flex;
  flex-direction: column;
}
.header-Info-title{
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
  color: green;
}
.header-Info-data{
  flex: 1;
  padding-left: 30rpx;
  font-size: 40rpx;
  color: #ccc;
}
.content{
  padding: 20rpx;
}
.loading{
  position: relative;
  height: 60px;
  background-color: white;
  margin:0 20rpx 0 20rpx;
  z-index: 1;
}
.loading image{
  position: absolute;
  width: 60px;
  height: 60px;
  left: 50%;
  top:0;
  margin-left: -30px;
}
.loading image.bottom_img{
  bottom: 0;
}